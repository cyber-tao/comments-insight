{
  "name": "comments-insight",
  "version": "0.3.5",
  "description": "AI-powered comment extraction and analysis Chrome extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "package": "npm run build && node scripts/package.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,css,html}\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "audit": "npm audit && npm outdated",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "i18next": "^25.6.3",
    "lz-string": "^1.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.31",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-i18next": "^7.8.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.14"
  }
}
